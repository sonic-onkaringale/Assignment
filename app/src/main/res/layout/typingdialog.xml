<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Material3.Dark.Dialog.Alert"
    android:id="@+id/typingdialog_linearlayout"
    >
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/alternate_input_field_materialEdt_dialog"

        android:textColorHint="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:helperTextTextColor="@android:color/white"
        app:placeholderTextColor="@android:color/white"
        app:counterTextColor="@android:color/white"
        app:prefixTextColor="@android:color/white"
        app:hintTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        app:layout_constraintStart_toEndOf="@+id/hello_btn"
        app:layout_constraintEnd_toStartOf="@+id/complete_btn"
        app:layout_constraintTop_toTopOf="parent"



        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Alternate Input Text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"

            />

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
